---
import Layout from "../layouts/Layout.astro";
let res = await fetch("https://norian.studio/wp-json/wp/v2/dinos")
let posts = await res.json();
---

<Layout title='Blog | Musically Equipped'>
  <div class='hero py-36 bg-slate-700'>
    <h1
      class='text-5xl text-center text-white drop-shadow-md font-bold bg-yellow-500 py-3'
    >
      Blog
    </h1>
  </div>

  <section>
   <h1>List of Dinosaurs</h1>
    {
      posts.map((post) => (
        <article>
          <h2>
            <a href={`/posts/${post.slug}/`} set:html={post.title.rendered} />
          </h2>
          <Fragment set:html={post.content.rendered} />
        </article>
      ))
    }
  </section>
</Layout>
<style>
  .hero {
    background-image: url("../images/header.jpg");
    background-repeat: no-repeat;
    background-size: cover;
    background-position: bottom;
  }
</style>
