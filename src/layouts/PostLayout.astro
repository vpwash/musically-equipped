---
import Layout from '../layouts/Layout.astro';
const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title} metaTitle={frontmatter.metaTitle}>
  <section
    class='flex flex-col container py-10 px-10 md:prose-xl mx-auto prose'
  >
    <img
      class='rounded-md md:w-lg'
      src={frontmatter.thumbnail}
      alt={frontmatter.imageAlt}
    />
    <h1 class='text-yellow-500 font-bold text-3xl md:text-5xl py-10'>
      {frontmatter.title}
    </h1>

    <slot />
  </section>
</Layout>
